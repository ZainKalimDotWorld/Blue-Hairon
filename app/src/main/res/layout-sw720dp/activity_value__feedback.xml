<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/company_logo"
        android:layout_marginLeft="20dp" />








    <RelativeLayout
        android:id="@+id/my_ph"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginLeft="380dp"
            android:src="@mipmap/food_menu1"
            android:layout_marginStart="380dp" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_toRightOf="@id/imageView1"
            android:src="@mipmap/feedback1" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-200dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@id/imageView1"
            android:src="@mipmap/food_menu2" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@id/imageView1"
            android:src="@mipmap/feedback2" />


        <TextView
            android:id="@+id/time_in_is"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView3"
            android:layout_marginLeft="480dp"

            android:layout_centerVertical="true"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="FOOD MENU"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />






        <TextView
            android:id="@+id/time_in_is2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView4"
            android:layout_toRightOf="@id/time_in_is"
            android:layout_marginLeft="185dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="FEEDBACK"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />







    </RelativeLayout>


    <TextView
        android:id="@+id/textVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_ph"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="135dp"
        android:fontFamily="@font/arial"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="design And developed by DOT WORLD(https://dotworldtechnologies.com)"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />



</RelativeLayout>



